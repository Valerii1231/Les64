doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/style.css')
        title Lesson63
    body
        .edit
            h1 Edit: #{user.name}       
            form(action=`/change-user/${user._id}`,  class="edit-form" method="POST")
                label(for="avatar") Avatar:
                input(id="avatar", name="avatar", value=`${user.avatar}`)

                label(for="name") Name:
                input(id="name", name="name", value=`${user.name}`)

                label(for="age") Age:
                input(type="number", min="1", id="age", name="age", value=`${user.age}`)

                label(for="status") Status:
                input(id="status", name="status", value=`${user.status}`)

                button(type="submit", class="edit-btn") Edit User
